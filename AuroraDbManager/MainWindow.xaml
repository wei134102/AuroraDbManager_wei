<Window x:Class="AuroraDbManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AuroraDbManager.Views"
        Title="Aurora Database Manager" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="文件(_F)">
                <MenuItem Header="加载Content数据库" Click="LoadContentDb_OnClick"/>
                <MenuItem Header="加载Settings数据库" Click="LoadSettingsDb_OnClick"/>
                <Separator/>
                <MenuItem Header="导出Content数据" Click="ExportContentData_OnClick" IsEnabled="{Binding IsContentOpen}"/>
                <MenuItem Header="导出Settings数据" Click="ExportSettingsData_OnClick" IsEnabled="{Binding IsSettingsOpen}"/>
                <Separator/>
                <MenuItem Header="退出" Click="Exit_OnClick"/>
            </MenuItem>
            <MenuItem Header="工具(_T)">
                <MenuItem Header="Xbox游戏数据库" Click="OpenXboxGamesDb_OnClick"/>
            </MenuItem>
        </Menu>
        
        <TabControl Grid.Row="1" Name="MainTabControl" SelectionChanged="MainTabControl_OnSelectionChanged">
            <TabItem Header="Content Database">
                <views:ContentDbView x:Name="ContentDbView"/>
            </TabItem>
            <TabItem Header="Settings Database">
                <views:SettingsDbView x:Name="SettingsDbView"/>
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="2" Name="Status" Height="25" Background="LightGray">
            <StatusBarItem>
                <TextBlock Name="StatusText">Ready...</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>