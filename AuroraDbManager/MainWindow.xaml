<Window x:Class="AuroraDbManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:AuroraDbManager.Views"
        Title="Aurora Database Manager" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Load Content Database" Click="SelectContentDb"/>
                <MenuItem Header="_Load Settings Database" Click="SelectSettingsDb"/>
            </MenuItem>
        </Menu>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Content Database">
                <Views:ContentDbView x:Name="ContentDbViewCtrl" />
            </TabItem>
            <TabItem Header="Settings Database">
                <Views:SettingsDbView x:Name="SettingsDbViewCtrl" />
            </TabItem>
            <TabItem Header="Xbox Games">
                <Views:XboxGamesView x:Name="XboxGamesViewCtrl" />
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="2" x:Name="MainStatusBar">
            <StatusBarItem>
                <TextBlock x:Name="Status" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>