<Window x:Class="AuroraDbManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:AuroraDbManager.Views"
        Title="Aurora Database Manager" Height="600" Width="1000">
    <Grid>
        <TabControl>
            <TabItem Header="Content Database">
                <Views:ContentDbView x:Name="ContentDbViewCtrl" />
            </TabItem>
            <TabItem Header="Settings Database">
                <Views:SettingsDbView x:Name="SettingsDbViewCtrl" />
            </TabItem>
            <TabItem Header="Xbox Games">
                <Views:XboxGamesView x:Name="XboxGamesViewCtrl" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>