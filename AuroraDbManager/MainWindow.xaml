<Window x:Class="AuroraDbManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AuroraDbManager.Views"
        Title="Aurora Database Manager V2.0 · 2025 b站：86年复古游戏厅"
        Height="768" Width="1180"
        Background="{StaticResource WindowGradientBrush}"
        Closing="MainWindow_OnClosing">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="24" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Aurora 数据库管理中心" Style="{StaticResource SectionHeaderStyle}"/>
                    <TextBlock Text="快速浏览、编辑 Aurora Content/Settings 数据库，并一键管理 Xbox 360 FTP 资源"
                               Foreground="{StaticResource MutedForegroundBrush}"
                               FontSize="13"/>
                </StackPanel>
                <Menu Grid.Column="1" Style="{StaticResource ModernMenuStyle}">
                    <MenuItem Header="文件(_F)" Style="{StaticResource ModernMenuItemStyle}" Click="MenuItem_Click">
                        <MenuItem Header="加载Content数据库" Click="LoadContentDb_OnClick"/>
                        <MenuItem Header="加载Settings数据库" Click="LoadSettingsDb_OnClick"/>
                        <Separator/>
                        <MenuItem Header="导出Content数据" Click="ExportContentData_OnClick" IsEnabled="{Binding IsContentOpen}"/>
                        <MenuItem Header="导出Settings数据" Click="ExportSettingsData_OnClick" IsEnabled="{Binding IsSettingsOpen}"/>
                        <Separator/>
                        <MenuItem Header="退出" Click="Exit_OnClick"/>
                    </MenuItem>
                    <MenuItem Header="工具(_T)" Style="{StaticResource ModernMenuItemStyle}">
                        <MenuItem Header="Xbox游戏数据库" Click="OpenXboxGamesDb_OnClick"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,16">
            <TabControl Name="MainTabControl" SelectionChanged="MainTabControl_OnSelectionChanged">
                <TabItem Header="内容数据库">
                    <views:ContentDbView x:Name="ContentDbView"/>
                </TabItem>
                <TabItem Header="设置数据库">
                    <views:SettingsDbView x:Name="SettingsDbView"/>
                </TabItem>
                <TabItem Header="FTP客户端">
                    <views:FtpClientView x:Name="FtpClientView"/>
                </TabItem>
                <TabItem Header="游戏目录管理">
                    <views:GameDirectoryManagerView x:Name="GameDirectoryManagerView"/>
                </TabItem>
            </TabControl>
        </Border>
        
        <StatusBar Grid.Row="2" Name="Status" Height="30" Style="{StaticResource ModernStatusBarStyle}">
            <StatusBarItem>
                <TextBlock Name="StatusText">Ready...</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>