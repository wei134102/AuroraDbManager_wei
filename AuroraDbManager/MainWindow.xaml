<Window x:Class="AuroraDbManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AuroraDbManager.Views"
        Title="Aurora Database Manager V2.0 (2025年 B站：86年复古游戏厅 优化版)" Height="768" Width="1024"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Style="{StaticResource ModernMenuStyle}">
            <MenuItem Header="文件(_F)" Style="{StaticResource ModernMenuItemStyle}" Click="MenuItem_Click">
                <MenuItem Header="加载Content数据库" Click="LoadContentDb_OnClick"/>
                <MenuItem Header="加载Settings数据库" Click="LoadSettingsDb_OnClick"/>
                <Separator/>
                <MenuItem Header="导出Content数据" Click="ExportContentData_OnClick" IsEnabled="{Binding IsContentOpen}"/>
                <MenuItem Header="导出Settings数据" Click="ExportSettingsData_OnClick" IsEnabled="{Binding IsSettingsOpen}"/>
                <Separator/>
                <MenuItem Header="退出" Click="Exit_OnClick"/>
            </MenuItem>
            <MenuItem Header="工具(_T)" Style="{StaticResource ModernMenuItemStyle}">
                <MenuItem Header="Xbox游戏数据库" Click="OpenXboxGamesDb_OnClick"/>
            </MenuItem>
        </Menu>
        
        <TabControl Grid.Row="1" Name="MainTabControl" SelectionChanged="MainTabControl_OnSelectionChanged">
            <TabItem Header="内容数据库&#xD;&#xA;">
                <views:ContentDbView x:Name="ContentDbView"/>
            </TabItem>
            <TabItem Header="设置数据库&#xD;&#xA;">
                <views:SettingsDbView x:Name="SettingsDbView"/>
            </TabItem>
            <TabItem Header="FTP客户端&#xD;&#xA;">
                <views:FtpClientView x:Name="FtpClientView"/>
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="2" Name="Status" Height="25" Style="{StaticResource ModernStatusBarStyle}">
            <StatusBarItem>
                <TextBlock Name="StatusText">Ready...</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>