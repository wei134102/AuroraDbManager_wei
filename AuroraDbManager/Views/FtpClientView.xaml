<UserControl x:Class="AuroraDbManager.Views.FtpClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Connection Settings -->
            <RowDefinition Height="*"/>    <!-- File Browsers -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Connection Settings -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="主机:"/>
                <TextBox x:Name="HostTextBox" Width="120" Text="192.168.1.100" Margin="0,0,5,0"/>
                <Label Content="端口:"/>
                <TextBox x:Name="PortTextBox" Width="50" Text="21" Margin="0,0,5,0"/>
                <Label Content="用户:"/>
                <TextBox x:Name="UserTextBox" Width="80" Text="xboxftp" Margin="0,0,5,0"/>
                <Label Content="密码:"/>
                <PasswordBox x:Name="PasswordBox" Width="80" Margin="0,0,10,0"/>
                <Button x:Name="ConnectButton" Content="连接" Width="70" Margin="0,0,5,0" Click="ConnectButton_Click"/>
                <Button x:Name="DisconnectButton" Content="断开" Width="70" Click="DisconnectButton_Click" IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- File Browsers and Actions -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Local Files -->
                <ColumnDefinition Width="Auto"/> <!-- Action Buttons -->
                <ColumnDefinition Width="*"/> <!-- Remote Files -->
            </Grid.ColumnDefinitions>

            <!-- Local File Browser -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="本地路径:"/>
                        <TextBox x:Name="LocalPathTextBox" IsReadOnly="True" Text="C:\" Width="200" VerticalContentAlignment="Center"/>
                        <Button Content="刷新" Margin="5,0,0,0" Click="RefreshLocalButton_Click"/>
                    </StackPanel>
                    <TreeView x:Name="LocalTreeView" Grid.Row="1" Margin="5"
                              ItemsSource="{Binding LocalFileSystemItems}"
                              SelectedItemChanged="LocalTreeView_SelectedItemChanged">
                        <TreeView.Resources>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            </Style>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                <Button x:Name="UploadButton" Content="上传 " Width="80" Margin="0,5" Click="UploadButton_Click" IsEnabled="False"/>
                <Button x:Name="DownloadButton" Content="下载" Width="80" Margin="0,5" Click="DownloadButton_Click" IsEnabled="False"/>
                <Button x:Name="DeleteButton" Content="删除" Width="80" Margin="0,5" Click="DeleteButton_Click" IsEnabled="False"/>
                <Button x:Name="CreateFolderButton" Content="新建文件夹" Width="80" Margin="0,5" Click="CreateFolderButton_Click" IsEnabled="False"/>
            </StackPanel>

            <!-- Remote File Browser -->
            <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="远程路径:"/>
                        <TextBox x:Name="RemotePathTextBox" IsReadOnly="True" Text="/" Width="200" VerticalContentAlignment="Center"/>
                        <Button x:Name="RefreshRemoteButton" Content="刷新" Margin="5,0,0,0" Click="RefreshRemoteButton_Click" IsEnabled="False"/>
                    </StackPanel>
                    <TreeView x:Name="RemoteTreeView" Grid.Row="1" Margin="5"
                              ItemsSource="{Binding RemoteFileSystemItems}"
                              SelectedItemChanged="RemoteTreeView_SelectedItemChanged">
                        <TreeView.Resources>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            </Style>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25" Background="LightSteelBlue">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="未连接"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="TransferProgressBar" Width="150" Height="15" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>