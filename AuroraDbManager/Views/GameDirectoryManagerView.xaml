<UserControl x:Class="AuroraDbManager.Views.GameDirectoryManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="Transparent">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="游戏目录管理" Style="{StaticResource SectionHeaderStyle}"/>
        <TextBlock Grid.Row="1" Text="扫描并管理Xbox 360游戏目录，支持游戏复制功能"
                   Foreground="{StaticResource MutedForegroundBrush}" FontSize="13" Margin="0,0,0,8"/>

        <!-- 路径设置区域 -->
        <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}" Padding="0" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 路径设置工具栏 -->
                <ToolBar Grid.Row="0" Height="52" Style="{StaticResource ModernToolBarStyle}" Padding="16,8">
                    <TextBlock Text="源游戏目录:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="SourceDirectoryTextBox" Width="200" Margin="0,0,5,0" 
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="BrowseSourceButton" Content="浏览..." 
                            Click="BrowseSourceButton_Click" Margin="0,0,15,0"
                            Style="{StaticResource ModernButtonStyle}"/>

                    <TextBlock Text="目的游戏目录:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="DestinationDirectoryTextBox" Width="200" Margin="0,0,5,0" 
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="BrowseDestinationButton" Content="浏览..." 
                            Click="BrowseDestinationButton_Click" Margin="0,0,15,0"
                            Style="{StaticResource ModernButtonStyle}"/>

                    <Button x:Name="ScanButton" Content="扫描目录" 
                            Click="ScanButton_Click" 
                            Style="{StaticResource ModernButtonStyle}"/>
                </ToolBar>

                <!-- 游戏列表 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 源目录游戏列表 -->
                    <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{StaticResource PrimaryLightBrush}" Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="SourceDirectoryInfoTextBlock" Text="源目录: 未选择" FontWeight="Bold" Foreground="White"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <CheckBox x:Name="SourceSelectAllCheckBox" Content="全选" Foreground="White" Margin="0,0,10,0" 
                                                  Checked="SourceSelectAll_Checked" Unchecked="SourceSelectAll_Unchecked"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <DataGrid x:Name="SourceGamesDataGrid" Grid.Row="1" 
                                      AutoGenerateColumns="False" IsReadOnly="False"
                                      SelectionMode="Extended" SelectionUnit="FullRow"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      HeadersVisibility="Column" SelectionChanged="DataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="30"/>
                                    <DataGridTextColumn Header="游戏ID" Binding="{Binding GameId}" Width="120"/>
                                    <DataGridTextColumn Header="英文标题" Binding="{Binding Title}" Width="*"/>
                                    <DataGridTextColumn Header="中文标题" Binding="{Binding TitleCn}" Width="*"/>
                                    <DataGridTextColumn Header="大小" Binding="{Binding FormattedSize}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- 目标目录游戏列表 -->
                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{StaticResource PrimaryLightBrush}" Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="DestinationDirectoryInfoTextBlock" Text="目标目录: 未选择" FontWeight="Bold" Foreground="White"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <CheckBox x:Name="DestinationSelectAllCheckBox" Content="全选" Foreground="White" Margin="0,0,10,0"
                                                  Checked="DestinationSelectAll_Checked" Unchecked="DestinationSelectAll_Unchecked"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <DataGrid x:Name="DestinationGamesDataGrid" Grid.Row="1" 
                                      AutoGenerateColumns="False" IsReadOnly="False"
                                      SelectionMode="Extended" SelectionUnit="FullRow"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      HeadersVisibility="Column" SelectionChanged="DataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="30"/>
                                    <DataGridTextColumn Header="游戏ID" Binding="{Binding GameId}" Width="120"/>
                                    <DataGridTextColumn Header="英文标题" Binding="{Binding Title}" Width="*"/>
                                    <DataGridTextColumn Header="中文标题" Binding="{Binding TitleCn}" Width="*"/>
                                    <DataGridTextColumn Header="大小" Binding="{Binding FormattedSize}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 操作按钮区域 -->
                <Border Grid.Row="2" Background="{StaticResource BackgroundBrush}" Padding="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="StatusTextBlock" Grid.Column="0" Text="就绪" VerticalAlignment="Center" 
                                   Foreground="{StaticResource MutedForegroundBrush}"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="CopySelectedButton" Content="复制选中游戏到目标目录" 
                                    Click="CopySelectedButton_Click" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White"
                                    Padding="16,6"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>